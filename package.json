{
  "name": "@rolme/ytscript",
  "version": "1.0.5",
  "description": "A CLI tool to download YouTube video transcripts",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ytscript": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node --esm src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "GITHUB_TOKEN=${GITHUB_TOKEN} npm run build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "youtube",
    "transcript",
    "subtitles",
    "cli",
    "captions",
    "download",
    "video",
    "youtube-transcript",
    "youtube-subtitles",
    "youtube-captions"
  ],
  "author": "Roland Me",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rolme/ytscript.git"
  },
  "bugs": {
    "url": "https://github.com/rolme/ytscript/issues"
  },
  "homepage": "https://github.com/rolme/ytscript#readme",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@types/node": "^20.0.0",
    "commander": "^11.0.0",
    "dotenv": "^16.4.7",
    "glob": "^10.3.10",
    "lru-cache": "^10.0.0",
    "openai": "^4.87.3",
    "typescript": "~5.5.0",
    "youtube-dl-exec": "^3.0.19",
    "youtube-transcript": "^1.0.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.0.0",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*"
  ]
}
