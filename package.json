{
  "name": "@rolme/ytscript",
  "version": "1.0.0",
  "description": "A CLI tool to download YouTube video transcripts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "@rolme/ytscript": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "npm run build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "youtube",
    "transcript",
    "subtitles",
    "cli",
    "captions",
    "download",
    "video",
    "youtube-transcript",
    "youtube-subtitles",
    "youtube-captions"
  ],
  "author": "Roland Me",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rolme/ytscript.git"
  },
  "bugs": {
    "url": "https://github.com/rolme/ytscript/issues"
  },
  "homepage": "https://github.com/rolme/ytscript#readme",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.0.0",
    "commander": "^11.0.0",
    "typescript": "~5.5.0",
    "youtube-dl-exec": "^3.0.19",
    "youtube-transcript": "^1.0.6"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*"
  ]
}
